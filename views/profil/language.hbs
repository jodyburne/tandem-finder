<section id="language">
  <div class="row"><h2 class="mt-5 col-12 text-primary">My Languages</h2></div>
  <div class="row"><h4 class="mt-3 col-12 text-secondary">Add A Language</h4></div>
<form action="/language/add" method="POST">
  <div class="row mt-2">
  <div class="form-group col-12 col-md-4">
    <select class="form-control" name="language">
      <option>English</option>
      <option>German</option>
      <option>French</option>
      <option>Italian</option>
      <option>Spanish</option>
      <option>Portuguese</option>
    </select>
  </div>
  <div class="form-group col-12 col-md-4">
    <select class="form-control" name="level">
      <option value="1" >Beginner</option>
      <option value="2">Intermediate</option>
      <option value="3">Advanced</option>
    </select>
  </div>
  <div class="col-12 col-md-4"><button type="submit" class="btn btn-primary btn-block">Add Language</button></div>
  </div>
</form>
<table class=" mt-4 table">
  <thead>
    <tr>
      <th scope="col">Language</th>
      <th scope="col">Level</th>
      <th scope="col">Operations</th>
    </tr>
  </thead>
  <tbody>
    {{#each languages}}
    <tr>
      <th scope="row">{{this.language}}</th>
      <td>{{formatLevel this.level}}</td>
      <td><a class="ml-5 mr-5 text-decoration-none" href="/language/edit/{{this._id}}">EDIT</a><a class="ml-5 mr-5 text-decoration-none" href="/language/delete/{{this._id}}">DELETE</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</section>

